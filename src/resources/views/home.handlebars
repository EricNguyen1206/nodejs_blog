
<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item" style="width: 18rem; margin-top: 16px;">
                <a href="/courses/{{this.slug}}" >
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" >
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.discription}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Vào học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


